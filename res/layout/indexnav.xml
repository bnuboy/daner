<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bnu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="师大"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:id="@+id/career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="职业"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:id="@+id/trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="交易"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:id="@+id/entertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="娱乐"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />
            
            <TextView
                android:id="@+id/topten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="十大"
                android:textSize="12pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/infomation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="信息"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:id="@+id/academic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="学术"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:id="@+id/life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="生活"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:id="@+id/club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="社团"
                android:textSize="12pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />
            
            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:text="登录"
                android:textSize="12pt" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>